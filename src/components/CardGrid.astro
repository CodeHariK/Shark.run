---
interface Props {
	gridCount: number;
	cardSize?: string;
}

const { gridCount, cardSize } = Astro.props;
---

<ul role="list" class="card-grid">
	<slot />
</ul>

<style define:vars={{ gridCount, cardSize }}>
	.card-grid {
		width: 100%;
		display: grid;
		grid-template-columns: repeat(var(--gridCount), 1fr);
		gap: 1rem;
		padding: 0;
	}
</style>
